{{>header}}
{{>navbar}}
<section class="container my-4">
    <h3 class="text-center text-muted my-3">All Users</h3>
    <table class="table table-stripped table-responsive align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Account Number</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#if hasData}}
                {{#each data}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.accNum}}</td>
                    <td>{{this.balance}}</td>
                    <td>
                        <a href="/users/trans/{{this.id}}" class="btn btn-warning mx-3">Add Transaction</a>
                        <a href="/users/{{this.id}}" class="btn btn-primary mx-3">Show</a>
                        <a href="/users/del/{{this.id}}" class="btn btn-danger mx-3">Delete</a>
                        <a href="/users/edit/{{this.id}}" class="btn btn-success mx-3">Edit</a>
                    </td>
                </tr>
                {{/each}}
            {{else}}
                <tr class="alert alert-danger">
                    <td colspan="4">
                        No Users Yet
                    </td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}